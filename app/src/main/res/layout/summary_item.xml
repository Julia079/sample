<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/summary_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/celestial_blue"
            android:fontFamily="@font/roboto_bold"
            tools:text="1. What does CPU stand for?" />

        <ImageView
            android:id="@+id/summary_question_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:src="@drawable/linux_logo"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/summary_user_answer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/roboto_bold"
            tools:text="Your Answer: Central Processing Unit" />

        <TextView
            android:id="@+id/summary_correct_answer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_green"
            android:fontFamily="@font/roboto_bold"
            tools:text="Correct Answer: Central Processing Unit" />

        <TextView
            android:id="@+id/summary_explanation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="italic"
            android:textColor="@color/celestial_blue"
            android:fontFamily="@font/roboto_bold"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Explanation: The CPU is the primary component of a computer that executes instructions." />

    </LinearLayout>
</androidx.cardview.widget.CardView>